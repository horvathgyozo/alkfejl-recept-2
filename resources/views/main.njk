{% extends 'layout' %}

{% block scripts %}
<script src="/scripts/main.js"></script>
<!--<script src="/scripts/autosuggest.js"></script>-->
<script src="/scripts/popup_login.js"></script>
{% endblock %}

{% block styles %}
<link rel="stylesheet" href="/main.css">
{% endblock %}

{% block content %}

<h2>{{ name }}</h2>

<div class="row">

  <form action="/recipes" method="GET" style="position: relative;">
    {{ csrfField | safe }}
    <div class="input-group search-box">
      <input type="text" class="form-control recipe-search" placeholder="Keresés..." name="recipeName" autocomplete="off">
      <span class="input-group-btn">
        <button class="btn btn-info" type="submit">Mehet!</button>
      </span>
    </div>
    
  </form>

  {% for category in categories %}
  <div class="col-md-4 col-sm-6">
    <div class="panel panel-default">
      <div class="panel-heading">
        {{ category.name }}
        <span class="label label-warning pull-right">Összes megtekintése</span>
      </div>
      <ul class="list-group">
        {% for recipe in category.topRecipes %}
        <li class="list-group-item">
          <a href="/recipes/{{ recipe.id }}">
            {{ recipe.name }}
          </a>
        </li>
        {% endfor %}
      </ul>
    </div>
  </div>
  {% endfor %}
</div>
{% endblock %}





      
        
